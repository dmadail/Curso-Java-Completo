package util;

public class CurrencyConverter {
	
	public static final double IOF = 0.06;
	public static double calculaDolar(double valorDolar, double qtdDolar) {
		double valorReais = valorDolar * qtdDolar;
		valorReais += valorReais * IOF;
		
		return valorReais;
		
		//return valorDolar * qtdDolar * (1.0 + IOF);
		
	}
	
	
}
