
public class stringFuncoes {

	public static void main(String[] args) {
		
		
//		Formatar: toLowerCase(), toUpperCase(), trim()
		String teste = " Danielle Da Rosa Gonzatto Madail ";
		System.out.println("Original: " + teste);
		
		teste = teste.toLowerCase();
		System.out.println("Lower Case: " + teste);
		
		teste = teste.toUpperCase();
		System.out.println("Upper Case: " + teste);
		
		teste = teste.trim();
		System.out.println("Trim: " + teste);
		
		
		
//		Recortar: substring(inicio), substring(inicio, fim)
		
		
//		Substituir: Replace(char, char), Replace(string, string)

		
//		Buscar: IndexOf, LastIndexOf

		
//		Recortar com Base em uma string: str.Split(" ")

	}

}
