package model.services;

import java.time.Duration;

import model.entities.AluguelCarro;

public class ServicosDeAluguel {
	private Double precoPorDia;
	private Double precoPorHora;
	
	private TaxService taxService;

	public ServicosDeAluguel(Double precoPorDia, Double precoPorHora, TaxService taxService) {
		this.precoPorDia = precoPorDia;
		this.precoPorHora = precoPorHora;
		this.taxService = taxService;
	}
	
	public void processInvoice(AluguelCarro aluguelCarro) {
		
		double minutes = Duration.between(aluguelCarro.getStart(), aluguelCarro.getFinish()).toMinutes();		
		double hours = minutes / 60.0;
		
		double basicPayment;
		if (hours <= 12.0) {
			basicPayment = precoPorHora * Math.ceil(hours);
		}
		else {
			basicPayment = precoPorDia * Math.ceil(hours / 24);
		}

		double tax = taxService.tax(basicPayment);

		aluguelCarro.setInvoice(new Invoice(basicPayment, tax));
	}
}
