/*Instancie manualmente (hard code) os objetos mostrados abaixo e mostre-os
na tela do terminal, conforme exemplo.
Entities = Comentario, Post
*/

package applications;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;

import entities.Comentario;
import entities.Post;

public class Publicacoes {

	public static void main(String[] args) {
		LocalDate fmt1 = new DateTimeFormatter.ofPattern("dd/MM/yyyy");
		
		Comentario c1 = new Comentario("Have a nice trip!");
		Comentario c2 = new Comentario("Wow that's awesome!");
		Post p1 = new Post(
				fmt1.parse("21/06/2018 13:05:44"), 
				"Traveling to New Zealand", 
				"I'm going to visit this wonderful country!", 
				12);
		p1.addComentario(c1);
		p1.addComentario(c2);
		
		Comentario c3 = new Comentario("Good night");
		Comentario c4 = new Comentario("May the Force be with you");
		Post p2 = new Post(
				fmt1.parse("28/07/2018 23:14:19"), 
				"Good night guys", 
				"See you tomorrow", 
				5);
		p2.addComentario(c3);
		p2.addComentario(c4);
		
		System.out.println(p1);
		System.out.println(p2);
		

	}

}
