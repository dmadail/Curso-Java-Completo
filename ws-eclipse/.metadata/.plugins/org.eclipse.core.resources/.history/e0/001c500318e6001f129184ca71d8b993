package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Aluno;

public class Exercicio3 {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		
		Scanner sc = new Scanner(System.in);
		Aluno aluno = new Aluno();
		
		System.out.println("Entre com os Dados do Aluno para verificar se ele passou de Ano.");
		System.out.println("Obs.: A média é 60.00");
		
		System.out.print("Nome: ");
		aluno.name = sc.nextLine();
		
		System.out.print("Nota 1º Trimestre: ");
		aluno.nota1 = sc.nextDouble();
		
		System.out.print("Nota 2º Trimestre: ");
		aluno.nota2 = sc.nextDouble();
		
		System.out.print("Nota 3º Trimestre: ");
		aluno.nota3 = sc.nextDouble();
		
		System.out.println();
		double notaFinal = aluno.somaNotaFinal();
		System.out.println("Nota Final do Curso: " + notaFinal);
		System.out.println();
		
		if (notaFinal >= 60.00) {
			System.out.println("Passou");
		}
		else {
			System.out.println("Rodou");
			System.out.printf("Precisa de %d pontos para passar de ano.", aluno.notaFaltante());
		}
		

	}

}
